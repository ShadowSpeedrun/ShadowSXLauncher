<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:ShadowSXLauncher.UserControls"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="400"
        x:Class="ShadowSXLauncher.Views.ShadowColorAdjuster"
        Title="Shadow Color Adjuster"
        Width="1000"
        Height="400"
        CanResize="False">
    <Grid ColumnDefinitions="200, 800">
        <Grid Grid.Column="0" RowDefinitions="*, Auto">
            <Image Grid.Row="0" Source="../Assets/ShadowColorReferences/ShadowColorBase1.png"/>
            <Button Grid.Row="1" HorizontalAlignment="Stretch">
                <TextBlock HorizontalAlignment="Center">Set Shadow Color</TextBlock>
            </Button>
        </Grid>
        <Grid Grid.Column="1" RowDefinitions="*,*">
            <userControls:ColorPicker Name="MainColorPicker" Grid.Row="0"/>
            <userControls:ColorPicker Name="AccentColorPicker" Grid.Row="1"/>
        </Grid>

    </Grid>
</Window>
